<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".class_07.fragment.HomeFragment">

		<TextView
			android:id="@+id/tv_home_fragment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:theme="@style/class_07_title"
			android:text="@string/class_07_welcome"
			android:textSize="40sp"
			android:layout_marginTop="10dp"
			android:textStyle="bold"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<TextView
			android:id="@+id/tv_user_preferences"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/class_07_user_preferences"
			android:textSize="25sp"
			android:layout_marginTop="50dp"
			android:textStyle="bold"
			app:layout_constraintTop_toBottomOf="@+id/tv_home_fragment"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<TextView
			android:id="@+id/tvTitleDark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/class_07_dark_mode"
			android:textSize="18sp"
			android:layout_marginTop="20dp"
			android:textStyle="bold"
			app:layout_constraintTop_toBottomOf="@+id/tv_user_preferences"
			app:layout_constraintEnd_toStartOf="@+id/tv_change_language"
			app:layout_constraintStart_toStartOf="parent" />

		<TextView
			android:id="@+id/tv_change_language"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/class_07_change_language"
			android:textSize="18sp"
			android:layout_marginTop="20dp"
			android:textStyle="bold"
			app:layout_constraintTop_toBottomOf="@+id/tv_user_preferences"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/tvTitleDark" />


		<Button
			android:id="@+id/btn_recycler_fragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/class_07_button"
			android:text="RecyclerView"
			android:layout_marginTop="50dp"
			android:layout_marginHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@+id/tvTitleDark"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" />

		<Button
			android:id="@+id/btn_camera_permission"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/class_07_button"
			android:text="@string/class_07_camera_permission"
			android:layout_marginTop="20dp"
			android:layout_marginHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@+id/btn_recycler_fragment"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/btn_notifications_permission"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/class_07_button"
			android:text="@string/class_07_notifications_permission"
			android:layout_marginTop="20dp"
			android:layout_marginHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@+id/btn_camera_permission"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<Button
			android:id="@+id/btn_launch_notification"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/class_07_button"
			android:text="@string/class_07_notifications"
			android:layout_marginTop="20dp"
			android:layout_marginHorizontal="16dp"
			app:layout_constraintTop_toBottomOf="@+id/btn_notifications_permission"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

		<TextView
			android:id="@+id/tvTexto"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:theme="@style/class_07_text_description"
			android:layout_marginTop="50dp"
			android:padding="20dp"
			android:text="@string/class_07_example_text"
			app:layout_constraintTop_toBottomOf="@+id/btn_launch_notification"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>